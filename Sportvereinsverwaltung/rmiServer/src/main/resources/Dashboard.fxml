<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>
<AnchorPane prefHeight="100.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.sportsclub.starter.Dashboard">
   <children>
      <VBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
         <children>
            <HBox alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10" prefHeight="100.0" prefWidth="300.0" spacing="10">
               <children>
                  <Label fx:id="serverStatusLbl" text="Server inactive" style="-fx-text-fill: #E01F40" />
                  <Label fx:id="ipInfoLbl" alignment="CENTER_RIGHT" />
               </children>
            </HBox>
            <HBox AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" alignment="CENTER" prefHeight="100.0" prefWidth="300.0" spacing="10.0">
               <children>
                  <TextField fx:id="portInput" alignment="BASELINE_CENTER" prefWidth="70.0" promptText="Port" text="1099" />
                  <Button fx:id="startStopBtn" mnemonicParsing="false" text="Launch" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
